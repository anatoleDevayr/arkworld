<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mundoarkano.LinksComerciales"
             xmlns:constants="clr-namespace:Mundoarkano;assembly=Mundoarkano"
             BackgroundColor="White">
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Label Text="Links comerciales" HorizontalOptions="Center" FontSize="25" TextColor="Black" />
      <ListView x:Name="LinkView" ItemSelected="OnSelection" RowHeight="80">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding nombre}" Detail="{Binding url}" TextColor="Black" DetailColor="Blue" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>